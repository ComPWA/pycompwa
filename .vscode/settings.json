{
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "editor.formatOnSave": true,
  "git.detectSubmodules": false,
  "python.formatting.provider": "black",
  "python.testing.pytestArgs": ["--color=no"],
  "search.exclude": {
    "src/ComPWA": true,
    "src/pybind11": true
  }
}
